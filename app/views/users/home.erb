  <h1>Welcome to your home page, <%= current_user.username %>. (<a href="/users/logout">Log Out</a>) </h1>

  <% if flash[:message] %>
    <h2> <%= flash[:message] %> </h2>
  <% end %>

  <h2></h2>

  <h2>Below are your Sellers. <a href="/sellers/new">Add a Seller here.</a>  </h2>

      <table>
        <tr>
          <th> Name </th>
          <th> Start Date </th>
          <th> Edit Link </th>
        </tr>

        <% current_user.sellers.all.each do |seller| %>
          <tr>
              <th> <a href="/sellers/<%= seller.id %>"> <%= seller.seller_name %> </a> </th>
              <th> <%= seller.readable_start_date %> </th>
              <th> <a href="/sellers/<%= seller.id %>/edit">Edit</a> </th>
          </tr>
        <% end %>

      </table>


  <h2></h2>

  <h2>Below are your Product Lines.  <a href="#">Add a Product Line here.</a> </h2>

      <table>

        <tr>
          <th> Name </th>
          <th> Inventory Available </th>
          <th> Edit or Add Inventory </th>
        </tr>

        <% current_user.product_lines.all.each do |product_line| %>
          <tr>
              <th> <a href="#"> <%= product_line.product_name %> </a> </th>
              <th> <%= product_line.inventory_available %> </th>
              <th> <a href="#">Edit/Add Inventory</a> </th>
          </tr>

        <% end %>

      </table>

  <h2></h2>

  <h2>Below are other Product Lines from other Users. </h2>

      <table>

        <tr>
          <th> Name </th>
          <th> Inventory Available </th>
          <th> Entered By </th>
        </tr>

        <% ProductLine.all.each do |product_line| %>
          <% if product_line.user != current_user %>
            <tr>
                <th> <a href="#"> <%= product_line.product_name %> </a> </th>
                <th> <%= product_line.inventory_available %> </th>
                <th> <%= product_line.user.username %> </th>
            </tr>
          <% end %>
        <% end %>

      </table>


  <h2></h2>

  <h2>  Below are other Sellers </h2>

      <table>
        <tr>
          <th> Name </th>
          <th> Start Date </th>
          <th> Entered By </th>
        </tr>

        <% Seller.all.each do |seller| %>
          <% if seller.user != current_user %>
            <tr>
                <th> <a href="/sellers/<%= seller.id %>"> <%= seller.seller_name %> </a> </th>
                <th> <%= seller.readable_start_date %> </th>
                <th> <%= seller.user.username %> </th>
            </tr>
          <% end %>
        <% end %>

      </table>
